<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Titulo | PreguntadOrt</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
<header>
 <p id="contador">
            <noscript>Para ver el contador, necesitás Javascript.</noscript>
        </p>
</header>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    <footer class="footer text-center text-light bg-dark">
        <div class="container">
            <div class="row">
                <div class="col"><p>&copy;2024 Etermax</p></div>
                <div class="col"><p><a href="@Url.Action("Creditos")">Créditos</a></p></div>
                <div class="col"><p><a href="@Url.Action("PoliticaPrivacidad")">Politica De Privacidad</a></p></div>
            </div>
        </div>
    </footer>
    <script src="~/js/Contador.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)   
</body>
</html>
